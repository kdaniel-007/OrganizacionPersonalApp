<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="12dp"
    android:elevation="4dp"
    android:backgroundTint="@color/md_theme_light_surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTituloEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título del evento"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/md_theme_light_onSurface" />

        <TextView
            android:id="@+id/tvDescripcionEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción del evento"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/md_theme_light_onSurface" />

        <ImageButton
            android:id="@+id/btnGrabarNotaEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:contentDescription="Grabar nota de voz"
            android:src="@drawable/ic_microfono"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/organize_light_blue" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
